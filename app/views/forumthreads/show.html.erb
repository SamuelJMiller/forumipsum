<p id="notice"><%= notice %></p>

<%= link_to "Back to Threads", root_path %>

<table class="border-table">
  <thead>
    <tr>
      <th colspan="2"><%= @forumthread.title %></th>
    </tr>
  </thead>

  <tbody>
    <% if @forumthread.initial_post.length > 0 %>
      <tr>
        <td><%= @forumthread.user.username %></td>
        <td>
          <%= time_ago_in_words(@forumthread.created_at).gsub('about','') %> ago
          <br>
          <br>
          <%= @forumthread.initial_post %>
        </td>
        <td><%= link_to 'Ban Thread', forumthread_path, method: :delete %></td>
      </tr>
    <% end %>
    <% @forumthread.posts.each do |post| %>
      <tr>
        <td><%= post.user.username %></td>
        <td>
          <%= time_ago_in_words(post.created_at).gsub('about','') %> ago
          <br>
          <br>
          <%= post.body %>
        </td>
        <td><%= link_to 'Ban Post', forumthread_post_path(post.forumthread.id, post), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Reply", new_forumthread_post_path(@forumthread.id) %>
