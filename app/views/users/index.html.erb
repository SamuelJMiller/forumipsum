<div id="user-index-container">
    <h1 id="users-header">Users</h1>

    <div id="user-search-form-container">
        <%= form_tag(users_path, method: :get) do %>
            <%= text_field_tag(:search, params[:search]) %>
            <%= submit_tag("Search") %>
        <% end %>
    </div>

    <table id="search-results">
        <% @users.each do |user| %>
            <tr class="search-result-tr">
                <% if user.is_banned == false %>
                    <td class="search-result-td"><p class="user-link"><%= link_to user.username, user_path(user) %></p></td>
                <% else %>
                    <td class="search-result-td"><p class="user-link banned-user-result"><%= link_to user.username, user_path(user) %></p></td>
                <% end %>
            </tr>
        <% end %>
    </table>
</div>
