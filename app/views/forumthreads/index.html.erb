<p id="notice"><%= notice %></p>

<h1>Forumthreads</h1>

<table class="border-table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Replies</th>
      <th>Created</th>
      <th>Started by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @forumthreads.each do |forumthread| %>
      <tr>
        <td><%= link_to forumthread.title, forumthread %></td>
        <td><%= forumthread.replycount %></td>
        <td><%= time_ago_in_words(forumthread.created_at) %> ago</td>
        <td><%= forumthread.user.username %></td>
        <td><%= link_to 'Edit', edit_forumthread_path(forumthread) %></td>
        <td><%= link_to 'Destroy', forumthread, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Thread', new_forumthread_path %>
<% end %>
