<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Thread</th>
      <th>Body</th>
      <th>Feedback score</th>
      <th>Is banned</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.user_id %></td>
        <td><%= post.forumthread_id %></td>
        <td><%= post.body %></td>
        <td><%= post.feedback_score %></td>
        <td><%= post.is_banned %></td>
        <td><%= link_to 'Show', forumthread_post_path(post.forumthread.id, post) %></td>
        <td><%= link_to 'Edit', edit_forumthread_post_path(post.forumthread.id, post) %></td>
        <td><%= link_to 'Destroy', forumthread_post_path(post.forumthread.id, post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Post', new_forumthread_post_path %>
<% end %>
